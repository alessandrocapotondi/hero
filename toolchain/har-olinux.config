# General
CT_CONFIG_VERSION="3"
CT_EXPERIMENTAL=y
CT_RM_RF_PREFIX_DIR=n
CT_TARGET_VENDOR="none"

# Companion Tools
CT_COMP_TOOLS_MAKE=y
CT_MAKE_V_4_2=y
CT_MAKE_GMAKE_SYMLINK=y
CT_MAKE_GNUMAKE_SYMLINK=y

# Arch
CT_ARCH_ARM=y
CT_DEMULTILIB=y
CT_ARCH_USE_MMU=y
CT_ARCH_64=y

# Binutils
CT_BINUTILS_V_2_32=y

# Libc
CT_LIBC_GLIBC=y
CT_GLIBC_V_2_28=y
CT_GLIBC_KERNEL_VERSION_CHOSEN=y
CT_GLIBC_MIN_KERNEL_VERSION="4.19.0"

# Compiler
CT_GCC_V_8=y
CT_CC_LANG_CXX=y

# Linux
CT_KERNEL_LINUX=y
CT_LINUX_V_4_19=y
