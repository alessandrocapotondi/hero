# EditorConfig (http://editorconfig.org/)
root = true

# Default Settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 100

[*{.c,h}]
indent_size = 2
tab_width = 2

[*.{sv,svh,v,vg}]
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

[README*]
max_line_length = 80

[*.yml]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 72

# The format in diffs should be preserved, so disable all formatting options for them.
[*.diff]
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = false
max_line_length = 0
trim_trailing_whitespace = false

[Config.in{,.host}]
indent_style = tab
tab_width = 8
indent_size = 8
max_line_length = 72
